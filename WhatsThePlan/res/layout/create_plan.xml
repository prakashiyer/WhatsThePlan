<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcomeCreatePlanLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/createPlanErrorField"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_no_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF0000"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/newPlanTitleValue"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_no_margin"
            android:ems="10"
            android:hint="@string/new_plan_title_label"
            android:inputType="text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/newPlanTimeLabel"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:text="@string/new_plan_time_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/newPlanDateValue"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_no_margin"
            android:ems="10"
            android:hint="@string/new_plan_date_hint"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" >
        </TextView>

        <Button
            android:id="@+id/setDateButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/top_no_margin"
            android:background="@drawable/create"
            android:onClick="setDate"
            android:text="@string/date_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/newPlanTimeValue"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_no_margin"
            android:ems="10"
            android:hint="@string/new_plan_time_hint"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" >
        </TextView>

        <Button
            android:id="@+id/setTimeButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/top_no_margin"
            android:background="@drawable/create"
            android:onClick="setTime"
            android:text="@string/time_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/planLocationValue"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:ems="10"
            android:hint="@string/new_plan_location_label"
            android:inputType="textPostalAddress"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/selectedgroupPicThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|top"
            android:layout_marginTop="@dimen/top_less_margin"
            android:contentDescription="@string/upload_group_pic_description"
            android:src="@drawable/ic_launcher" 
            android:background="@drawable/image_border"/>

        <TextView
            android:id="@+id/selectedgroupNameField"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="left|top"
            android:layout_marginTop="@dimen/top_less_margin"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/standard_text_size"     
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/image_border" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="7"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/registerPlanButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/button"
            android:onClick="goFromCreatePlanToViewPlans"
            android:text="@string/register_plan_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

</GridLayout>
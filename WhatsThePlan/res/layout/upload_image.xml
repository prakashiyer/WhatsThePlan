<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:onClick="selectImage"
            android:text="@string/select_image_button"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:background="@drawable/create" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/profilePicView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/top_margin"
            android:src="@drawable/ic_image"
            android:layout_gravity="center_horizontal" 
            android:contentDescription="@string/upload_profile_pic_description"
            android:background="@drawable/image_border"/>
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:onClick="uploadImage"
            android:text="@string/upload_image_button"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:background="@drawable/create" />
        <Button
            android:id="@+id/skipImageButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:onClick="skipImage"
            android:text="@string/skip_image_button"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:background="@drawable/button" />
    </LinearLayout>

</GridLayout>
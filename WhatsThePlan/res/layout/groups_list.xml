<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="horizontal" >

        
        <Button
            android:id="@+id/joinGroupBtn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginBottom="@dimen/top_less_margin"
            android:background="@drawable/create"
            android:onClick="joinGroups"
            android:text="@string/join_groups_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/welcomeListGroupsLabel"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_no_margin"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/standard_text_size"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        

    </LinearLayout>
    
    <GridView
        android:id="@+id/groupList"
        android:layout_width="380dp"
        android:layout_height="320dp"
        android:layout_marginBottom="@dimen/top_no_margin"
        android:layout_marginTop="@dimen/top_less_margin"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:gravity="center"
        android:numColumns="2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:stretchMode="columnWidth"
        android:background="@drawable/grid_bg" >
        </GridView>
    
    
</GridLayout>

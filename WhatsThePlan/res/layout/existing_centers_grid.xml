<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >
    
     <Button
            android:id="@+id/goToAppointmentButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/button"
            android:onClick="goToAppointmentSelection"
            android:text="@string/next_step_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

    <SearchView
        android:id="@+id/centersSearchView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_less_margin"
        android:layout_row="1"
        android:iconifiedByDefault="false"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold"
        android:typeface="sans" >
    </SearchView>

    <GridView
        android:id="@+id/viewExistingCentersGrid"
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:layout_marginTop="@dimen/top_rows_margin"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:gravity="center"
        android:numColumns="2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:stretchMode="columnWidth"
        android:background="@drawable/grid_bg" >
    </GridView>

</GridLayout>
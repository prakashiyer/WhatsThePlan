<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcomeViewNewPlanLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/seeMembersAttendingButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/button"
            android:onClick="seeMembers"
            android:text="@string/see_plan_members_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/viewNewPlanTitleLabel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/image_border"
            android:gravity="center"
            android:text="@string/view_plan_title_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/viewNewPlanTitle"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/image_border"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/viewNewPlanTimeLabel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/image_border"
            android:gravity="center"
            android:text="@string/view_plan_date_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/viewNewPlanTime"
            android:layout_width="240dp"
            android:layout_height="52dp"
            android:background="@drawable/image_border"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/viewNewPlanEndTimeLabel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/image_border"
            android:gravity="center"
            android:text="@string/view_plan_date_label_till"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/viewNewPlanEndTime"
            android:layout_width="240dp"
            android:layout_height="52dp"
            android:background="@drawable/image_border"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/viewNewPlanLocationLabel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:background="@drawable/image_border"
            android:gravity="center"
            android:text="@string/view_plan_location_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/viewNewPlanLocation"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:background="@drawable/image_border"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="7"
        android:gravity="top|center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rsvpNewLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:typeface="sans" 
            android:visibility="visible" />
       <Button
            android:id="@+id/rsvpNewPlanButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/create"
            android:onClick="rsvpPlan"
            android:textColor="@color/button_text"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="invisible" />
    </LinearLayout>

</GridLayout>
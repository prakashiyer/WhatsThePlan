<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/medTitleValue"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:ems="10"
            android:hint="@string/new_prescription_title_label"
            android:inputType="text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />
    </LinearLayout>

   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/medValue"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:ems="10"
            android:hint="@string/new_prescription_description"
            android:inputType="textPostalAddress"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/medTimeLabel"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:text="@string/new_plan_time_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/medDateValue"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_no_margin"
            android:ems="10"
            android:hint="@string/new_plan_date_hint"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" >
        </TextView>

        <Button
            android:id="@+id/medDateButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/top_no_margin"
            android:background="@drawable/create"
            android:onClick="setMedDate"
            android:text="@string/date_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>
    

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/morningId"
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_row="1"
            android:ems="10"
            android:text="@string/morning_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />

        <CheckBox
            android:id="@+id/eveningId"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_row="5"
            android:ems="10"
            android:text="@string/evening_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />

        <CheckBox
            android:id="@+id/nightId"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_row="5"
            android:ems="10"
            android:text="@string/night_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />

        <CheckBox
            android:id="@+id/afternoonId"
            android:layout_width="156dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_row="1"
            android:ems="10"
            android:text="@string/afternoon_text"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />

        <EditText
            android:id="@+id/numberOfDaysPrescription"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginTop="@dimen/top_less_margin"
            android:layout_row="0"
            android:ems="10"
            android:inputType="phone"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/numberOfDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:layout_row="0"
            android:text="@string/prescription_days"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="5"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/addPrescription"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:background="@drawable/button"
            android:onClick="addPrescription"
            android:text="@string/add_prescription_button_text"
            android:textColor="@color/button_text"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

</GridLayout>
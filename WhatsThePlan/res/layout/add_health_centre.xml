<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcomeAddHealthCentreLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical" >

        <SearchView
            android:id="@+id/healthCentreSearchView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_less_margin"
            android:iconifiedByDefault="false"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans" >
        </SearchView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/healthCentreSearchResultsLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_less_margin"
            android:text="@string/group_search_results_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/centerSearchResultValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_no_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/standard_text_size"
            android:typeface="sans"
            android:visibility="invisible" />

    </LinearLayout>

     <GridView
         android:id="@+id/viewhealthCenterGrid"
         android:layout_width="wrap_content"
         android:layout_height="208dp"
         android:layout_column="0"
         android:layout_gravity="left|center_vertical"
         android:layout_marginTop="@dimen/top_rows_margin"
         android:layout_row="2"
         android:background="@drawable/grid_bg"
         android:gravity="center"
         android:numColumns="2"
         android:paddingBottom="@dimen/activity_vertical_margin"
         android:stretchMode="columnWidth"
         android:visibility="invisible" >

    </GridView>

        <Button
        android:id="@+id/registerButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/top_no_margin"
        android:layout_row="3"
        android:background="@drawable/button"
        android:onClick="goFromJoinGroupToViewGroups"
        android:text="@string/register_button_text"
        android:textColor="@color/button_text"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold"
        android:typeface="sans" />


</GridLayout>